{
    "version": "0.2",
    "useGitignore": true,
    "caseSensitive": false,
    "enableGlobDot": true,
    "language": "en",
    "dictionaries": [
        "project-words"
    ],
    "ignorePaths": [
        "*.toml",
        ".git/*",
        ".gitignore",
        ".github/",
        "*.svg",
        ".circleci/",
        "theme/*"
    ],
    "dictionaryDefinitions": [
        {
            "name": "project-words",
            "path": ".cspell/project-words.txt",
            "addWords": true
        }
    ],
    "languageSettings": [
        {
            "languageId": "markdown",
            "ignoreRegExpList": [
                "markdown_code_block",
                "markdown_inline_code",
                "name_surname"
            ]
        }
    ],
    "patterns": [
        {
            "name": "markdown_code_block",
            "pattern": "```[\\s\\S]*?^\\s*```"
        },
        {
            "name": "markdown_inline_code",
            "pattern": "`.+`"
        },
        {
            "name": "name_surname",
            "pattern": "[A-Z]\\w+ [A-Z]\\w+"
        }
    ],
    "enabled": true
}